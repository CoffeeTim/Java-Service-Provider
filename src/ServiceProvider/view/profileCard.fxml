<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


        <VBox alignment="CENTER" prefHeight="263.0" prefWidth="234.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ServiceProvider.controllers.ProfileCard">
            <children>
                <ImageView fx:id="profilePhoto" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@image/avatar.png" />
                    </image>
                </ImageView>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Text fx:id="username" strokeType="OUTSIDE" strokeWidth="0.0" text="Username" />
                        <Text fx:id="specialisation" strokeType="OUTSIDE" strokeWidth="0.0" text="specialisation" />
                        <VBox alignment="CENTER">
                            <children>
                                <Button fx:id="btnshow" mnemonicParsing="false" onMouseClicked="#showProfile" text="show">
                                    <VBox.margin>
                                        <Insets bottom="10.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
